<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zp.xintianfei.ui.GameBJSCActivity">

    <include layout="@layout/common_banner" />

    <WebView
        android:id="@+id/act_game_bjsc_webview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/game_flash_height"></WebView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/space_10">

        <ImageView
            android:layout_width="@dimen/game_head_size"
            android:layout_height="@dimen/game_head_size"
            android:src="@drawable/bg_3" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
