<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/listitem_jl_lottery_img_1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/listitem_jl_lottery_img_2"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/listitem_jl_lottery_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="@dimen/space_5"
            android:text="@string/text_default"
            android:textSize="@dimen/text_size_13" />

        <ImageView
            android:id="@+id/listitem_jl_lottery_img_3"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/listitem_jl_lottery_tv_drjs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="@dimen/space_5"
            android:text="@string/text_default"
            android:textSize="@dimen/text_size_13" />

        <ImageView
            android:id="@+id/listitem_jl_lottery_img_4"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/listitem_jl_lottery_tv_zls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="@dimen/space_5"
            android:text="@string/text_default"
            android:textSize="@dimen/text_size_13" />

        <ImageView
            android:id="@+id/listitem_jl_lottery_img_5"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/listitem_jl_lottery_tv_zyk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="@dimen/space_5"
            android:text="@string/text_default"
            android:textSize="@dimen/text_size_13" />

        <ImageView
            android:id="@+id/listitem_jl_lottery_img_6"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray" />
    </LinearLayout>

    <ImageView
        android:id="@+id/listitem_jl_lottery_img_7"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />
</LinearLayout>
