<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/fg_main_lay_11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

        <com.zp.xintianfei.widget.MarqueeTextView
            android:id="@+id/fg_main_tv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_5"
            android:background="@drawable/bg_top"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="@dimen/space_5"
            android:singleLine="true"
            android:textColor="@color/orange_2" />
    </LinearLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fg_main_lay_11"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_pic_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fg_main_lay_11"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/space_20">

            <ImageView
                android:id="@+id/fg_main_img_head"
                android:layout_width="@dimen/avatar_size"
                android:layout_height="@dimen/avatar_size"
                android:scaleType="fitXY"
                android:src="@drawable/bg_3" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_20"
                android:orientation="vertical"
                android:paddingTop="@dimen/space_10">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_main_text_1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_15" />

                    <TextView
                        android:id="@+id/fg_tx_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="@string/text_default"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_15" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_5"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_main_text_2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/fg_tx_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_default"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_main_text_3"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/fg_tx_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_default"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_14" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/space_15"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/space_10">

                    <LinearLayout
                        android:id="@+id/fg_main_lay_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/main_icon_size"
                            android:layout_height="@dimen/main_icon_size"
                            android:src="@drawable/bjsc" />

                        <TextView
                            android:id="@+id/fg_main_tx_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_5"
                            android:text="@string/text_default"
                            android:textColor="@color/text_2"
                            android:textSize="@dimen/space_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fg_main_lay_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/main_icon_size"
                            android:layout_height="@dimen/main_icon_size"
                            android:src="@drawable/xgsm" />

                        <TextView
                            android:id="@+id/fg_main_tx_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_5"
                            android:text="@string/text_default"
                            android:textColor="@color/text_2"
                            android:textSize="@dimen/space_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fg_main_lay_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/main_icon_size"
                            android:layout_height="@dimen/main_icon_size"
                            android:src="@drawable/xyft" />

                        <TextView
                            android:id="@+id/fg_main_tx_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_5"
                            android:text="@string/text_default"
                            android:textColor="@color/text_2"
                            android:textSize="@dimen/space_14" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/space_10">

                    <LinearLayout
                        android:id="@+id/fg_main_lay_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/main_icon_size"
                            android:layout_height="@dimen/main_icon_size"
                            android:src="@drawable/cqssc" />

                        <TextView
                            android:id="@+id/fg_main_tx_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_5"
                            android:text="@string/text_default"
                            android:textColor="@color/text_2"
                            android:textSize="@dimen/space_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fg_main_lay_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/main_icon_size"
                            android:layout_height="@dimen/main_icon_size"
                            android:src="@drawable/qqlfc" />

                        <TextView
                            android:id="@+id/fg_main_tx_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_5"
                            android:text="@string/text_default"
                            android:textColor="@color/text_2"
                            android:textSize="@dimen/space_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fg_main_lay_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/main_icon_size"
                            android:layout_height="@dimen/main_icon_size"
                            android:src="@drawable/xglhc" />

                        <TextView
                            android:id="@+id/fg_main_tx_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_5"
                            android:text="@string/text_default"
                            android:textColor="@color/text_2"
                            android:textSize="@dimen/space_14" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/space_10">

                    <LinearLayout
                        android:id="@+id/fg_main_lay_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/main_icon_size"
                            android:layout_height="@dimen/main_icon_size"
                            android:src="@drawable/pcdd" />

                        <TextView
                            android:id="@+id/fg_main_tx_7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_5"
                            android:text="@string/text_default"
                            android:textColor="@color/text_2"
                            android:textSize="@dimen/space_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fg_main_lay_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/main_icon_size"
                            android:layout_height="@dimen/main_icon_size"
                            android:src="@drawable/jnd28" />

                        <TextView
                            android:id="@+id/fg_main_tx_8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_5"
                            android:text="@string/text_default"
                            android:textColor="@color/text_2"
                            android:textSize="@dimen/space_14" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fg_main_lay_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/main_icon_size"
                            android:layout_height="@dimen/main_icon_size"
                            android:src="@drawable/jsks" />

                        <TextView
                            android:id="@+id/fg_main_tx_9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/space_5"
                            android:text="@string/text_default"
                            android:textColor="@color/text_2"
                            android:textSize="@dimen/space_14" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/space_10">

                    <LinearLayout
                        android:id="@+id/fg_main_lay_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/main_icon_size"
                            android:layout_height="@dimen/main_icon_size"
                            android:src="@drawable/main_down" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fg_main_lay_13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/main_icon_size"
                            android:layout_height="@dimen/main_icon_size"
                            android:src="@drawable/main_android" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fg_main_lay_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/main_icon_size"
                            android:layout_height="@dimen/main_icon_size"
                            android:src="@drawable/main_ios" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>