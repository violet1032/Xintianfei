<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_banner" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_pic_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/space_50"
                android:text="@string/online_text_5"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/space_5"
                android:text="@string/online_text_6"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_15" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_40"
                android:layout_marginRight="@dimen/space_40"
                android:layout_marginTop="@dimen/space_20"
                android:background="@drawable/shape_round_stroke_h_transparent_orange_2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fg_online_weixin_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:padding="@dimen/space_10"
                    android:text="@string/text_default"
                    android:textColor="@color/orange_2"
                    android:textSize="@dimen/text_size_15" />

                <Button
                    android:id="@+id/fg_online_weixin_btn_copy"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/shape_rounded_rtb_h_orange_2"
                    android:padding="@dimen/space_10"
                    android:text="@string/online_text_9"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>

            <ImageView
                android:id="@+id/fg_online_weixin_img"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/space_10"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>