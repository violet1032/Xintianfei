<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/act_game_bjsc_quick_tv_content_title"
    android:layout_marginTop="@dimen/space_5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_game_bjsc_quick_zhdxds_lay_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_bg_stroke_black"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_bjsc_quick_text_34"
                android:textColor="@color/white"
                android:textSize="@dimen/game_content_number_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_5"
                android:text="@string/text_default"
                android:textColor="@color/yellow"
                android:textSize="@dimen/game_content_number_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_game_bjsc_quick_zhdxds_lay_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_3"
            android:layout_weight="1"
            android:background="@drawable/btn_bg_stroke_black"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_bjsc_quick_text_35"
                android:textColor="@color/white"
                android:textSize="@dimen/game_content_number_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_5"
                android:text="@string/text_default"
                android:textColor="@color/yellow"
                android:textSize="@dimen/game_content_number_text_size" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_3"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_game_bjsc_quick_zhdxds_lay_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_bg_stroke_black"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_bjsc_quick_text_36"
                android:textColor="@color/white"
                android:textSize="@dimen/game_content_number_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_5"
                android:text="@string/text_default"
                android:textColor="@color/yellow"
                android:textSize="@dimen/game_content_number_text_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_game_bjsc_quick_zhdxds_lay_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_3"
            android:layout_weight="1"
            android:background="@drawable/btn_bg_stroke_black"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_bjsc_quick_text_37"
                android:textColor="@color/white"
                android:textSize="@dimen/game_content_number_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_5"
                android:text="@string/text_default"
                android:textColor="@color/yellow"
                android:textSize="@dimen/game_content_number_text_size" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>