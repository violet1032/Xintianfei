<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zp.xintianfei.ui.GameXGLHCActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/common_banner" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_line_2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/space_5">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="12dp"
                        android:src="@drawable/tv_xglhc" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/game_xglhc_text_2"
                            android:textColor="@color/orange_2"
                            android:textSize="@dimen/text_size_11" />

                        <TextView
                            android:id="@+id/act_game_xglhc_tv_stage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_default"
                            android:textColor="@color/orange_2"
                            android:textSize="@dimen/text_size_11" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/game_xglhc_text_3"
                            android:textColor="@color/orange_2"
                            android:textSize="@dimen/text_size_11" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开奖结果"
                        android:textColor="@color/orange_2"
                        android:textSize="@dimen/text_size_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="@dimen/game_number_box_width"
                            android:layout_height="@dimen/game_number_box_size"
                            android:background="@drawable/shape_box_orange_2">

                            <ImageView
                                android:layout_width="@dimen/game_number_size"
                                android:layout_height="@dimen/game_number_size"
                                android:layout_centerInParent="true"
                                android:id="@+id/act_game_xglhc_img_num1"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="@dimen/game_number_box_width"
                            android:layout_height="@dimen/game_number_box_size"
                            android:background="@drawable/shape_box_orange_2">

                            <ImageView
                                android:layout_width="@dimen/game_number_size"
                                android:layout_height="@dimen/game_number_size"
                                android:layout_centerInParent="true"
                                android:id="@+id/act_game_xglhc_img_num2"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="@dimen/game_number_box_width"
                            android:layout_height="@dimen/game_number_box_size"
                            android:background="@drawable/shape_box_orange_2">

                            <ImageView
                                android:layout_width="@dimen/game_number_size"
                                android:layout_height="@dimen/game_number_size"
                                android:layout_centerInParent="true"
                                android:id="@+id/act_game_xglhc_img_num3"
                                 />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="@dimen/game_number_box_width"
                            android:layout_height="@dimen/game_number_box_size"
                            android:background="@drawable/shape_box_orange_2">

                            <ImageView
                                android:layout_width="@dimen/game_number_size"
                                android:layout_height="@dimen/game_number_size"
                                android:layout_centerInParent="true"
                                android:id="@+id/act_game_xglhc_img_num4"
                                 />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="@dimen/game_number_box_width"
                            android:layout_height="@dimen/game_number_box_size"
                            android:background="@drawable/shape_box_orange_2">

                            <ImageView
                                android:layout_width="@dimen/game_number_size"
                                android:layout_height="@dimen/game_number_size"
                                android:layout_centerInParent="true"
                                android:id="@+id/act_game_xglhc_img_num5"
                                 />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="@dimen/game_number_box_width"
                            android:layout_height="@dimen/game_number_box_size"
                            android:background="@drawable/shape_box_orange_2">

                            <ImageView
                                android:layout_width="@dimen/game_number_size"
                                android:layout_height="@dimen/game_number_size"
                                android:layout_centerInParent="true"
                                android:id="@+id/act_game_xglhc_img_num6"
                                 />
                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="@dimen/game_number_box_width"
                            android:layout_height="@dimen/game_number_box_size"
                            android:background="@drawable/shape_box_orange_2">

                            <ImageView
                                android:layout_width="@dimen/game_add_size"
                                android:layout_height="@dimen/game_add_size"
                                android:layout_centerInParent="true"
                                android:src="@drawable/icon_add" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="@dimen/game_number_box_width"
                            android:layout_height="@dimen/game_number_box_size"
                            android:background="@drawable/shape_box_orange_2">

                            <ImageView
                                android:layout_width="@dimen/game_number_size"
                                android:layout_height="@dimen/game_number_size"
                                android:layout_centerInParent="true"
                                android:id="@+id/act_game_xglhc_img_num7"
                                 />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="@dimen/game_number_box_width"
                            android:layout_height="@dimen/game_number_box_size"
                            android:background="@drawable/shape_box_orange_2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="@string/text_default"
                                android:textColor="@color/orange_2"
                                android:id="@+id/act_game_xglhc_tv_num1"
                                android:textSize="@dimen/text_size_15" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="@dimen/game_number_box_width"
                            android:layout_height="@dimen/game_number_box_size"
                            android:background="@drawable/shape_box_orange_2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="@string/text_default"
                                android:id="@+id/act_game_xglhc_tv_num2"
                                android:textColor="@color/orange_2"
                                android:textSize="@dimen/text_size_15" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="@dimen/game_number_box_width"
                            android:layout_height="@dimen/game_number_box_size"
                            android:background="@drawable/shape_box_orange_2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="@string/text_default"
                                android:id="@+id/act_game_xglhc_tv_num3"
                                android:textColor="@color/orange_2"
                                android:textSize="@dimen/text_size_15" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="@dimen/game_number_box_width"
                            android:layout_height="@dimen/game_number_box_size"
                            android:background="@drawable/shape_box_orange_2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="@string/text_default"
                                android:id="@+id/act_game_xglhc_tv_num4"
                                android:textColor="@color/orange_2"
                                android:textSize="@dimen/text_size_15" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="@dimen/game_number_box_width"
                            android:layout_height="@dimen/game_number_box_size"
                            android:background="@drawable/shape_box_orange_2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="@string/text_default"
                                android:textColor="@color/orange_2"
                                android:id="@+id/act_game_xglhc_tv_num5"
                                android:textSize="@dimen/text_size_15" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="@dimen/game_number_box_width"
                            android:layout_height="@dimen/game_number_box_size"
                            android:background="@drawable/shape_box_orange_2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="@string/text_default"
                                android:id="@+id/act_game_xglhc_tv_num6"
                                android:textColor="@color/orange_2"
                                android:textSize="@dimen/text_size_15" />
                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="@dimen/game_number_box_width"
                            android:layout_height="@dimen/game_number_box_size"
                            android:background="@drawable/shape_box_orange_2">

                            <ImageView
                                android:layout_width="@dimen/game_add_size"
                                android:layout_height="@dimen/game_add_size"
                                android:layout_centerInParent="true"
                                android:src="@drawable/icon_add" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="@dimen/game_number_box_width"
                            android:layout_height="@dimen/game_number_box_size"
                            android:background="@drawable/shape_box_orange_2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="@string/text_default"
                                android:id="@+id/act_game_xglhc_tv_num7"
                                android:textColor="@color/orange_2"
                                android:textSize="@dimen/text_size_15" />
                        </RelativeLayout>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/orange_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal"
                        android:padding="@dimen/space_6">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/game_xglhc_text_2"
                            android:textColor="@color/orange_2"
                            android:textSize="@dimen/text_size_15" />

                        <TextView
                            android:id="@+id/act_game_xglhc_tv_stage_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_default"
                            android:textColor="@color/orange_2"
                            android:textSize="@dimen/text_size_15" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/game_xglhc_text_3"
                            android:textColor="@color/orange_2"
                            android:textSize="@dimen/text_size_15" />
                    </LinearLayout>
                </RelativeLayout>

                <ImageView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/orange_2" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="@dimen/space_6">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/game_xglhc_text_24"
                            android:textColor="@color/orange_2"
                            android:textSize="@dimen/text_size_15" />

                        <TextView
                            android:id="@+id/act_game_xglhc_tv_time_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_10"
                            android:text="@string/text_default"
                            android:textColor="@color/orange_2"
                            android:textSize="@dimen/text_size_15" />
                    </LinearLayout>
                </RelativeLayout>

                <ImageView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/orange_2" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:padding="@dimen/space_6">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/game_xglhc_text_25"
                            android:textColor="@color/orange_2"
                            android:textSize="@dimen/text_size_15" />

                        <TextView
                            android:id="@+id/act_game_xglhc_tv_time_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_10"
                            android:text="@string/text_default"
                            android:textColor="@color/orange_2"
                            android:textSize="@dimen/text_size_15" />
                    </LinearLayout>
                </RelativeLayout>

                <ImageView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/orange_2" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/orange_2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_line_2"
            android:id="@+id/act_game_xglhc_lay"
            android:orientation="horizontal"
            android:padding="@dimen/space_15">

            <Button
                android:id="@+id/fg_xglhc_tm_btn_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/click_btn_round_skyblue"
                android:paddingBottom="@dimen/space_4"
                android:paddingLeft="@dimen/space_10"
                android:paddingRight="@dimen/space_10"
                android:paddingTop="@dimen/space_4"
                android:text="@string/xglhc_text_1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />

            <Button
                android:id="@+id/fg_xglhc_tm_btn_rule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_weight="1"
                android:background="@drawable/click_btn_round_skyblue"
                android:paddingBottom="@dimen/space_4"
                android:paddingLeft="@dimen/space_10"
                android:paddingRight="@dimen/space_10"
                android:paddingTop="@dimen/space_4"
                android:text="@string/xglhc_text_2"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />

            <Button
                android:id="@+id/fg_xglhc_tm_btn_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_weight="1"
                android:background="@drawable/click_btn_round_skyblue"
                android:paddingBottom="@dimen/space_4"
                android:paddingLeft="@dimen/space_10"
                android:paddingRight="@dimen/space_10"
                android:paddingTop="@dimen/space_4"
                android:text="@string/xglhc_text_3"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/act_game_xglhc_content"
            android:layout_height="match_parent">

        </FrameLayout>
    </LinearLayout>
</RelativeLayout>
