<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/listitem_jl_lottery_img_1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/listitem_jl_lottery_img_2"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/listitem_jl_lottery_tv_stage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="@dimen/space_5"
            android:text="@string/text_default"
            android:textSize="@dimen/text_size_12" />

        <ImageView
            android:id="@+id/listitem_jl_lottery_img_3"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/listitem_jl_lottery_tv_game"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="@dimen/space_5"
            android:text="@string/text_default"
            android:textSize="@dimen/text_size_12" />

        <ImageView
            android:id="@+id/listitem_jl_lottery_img_4"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/listitem_jl_lottery_tv_gamble"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="@dimen/space_5"
            android:text="@string/text_default"
            android:textSize="@dimen/text_size_12" />

        <ImageView
            android:id="@+id/listitem_jl_lottery_img_5"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/listitem_jl_lottery_tv_sum"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="@dimen/space_5"
            android:text="@string/text_default"
            android:textSize="@dimen/text_size_12" />

        <ImageView
            android:id="@+id/listitem_jl_lottery_img_6"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/listitem_jl_lottery_tv_result"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="@dimen/space_5"
            android:text="@string/text_default"
            android:textSize="@dimen/text_size_12" />

        <ImageView
            android:id="@+id/listitem_jl_lottery_img_7"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/listitem_jl_lottery_tv_opretion"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:padding="@dimen/space_5"
            android:text="@string/text_default"
            android:textSize="@dimen/text_size_12"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/listitem_jl_lottery_lay_opretion"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/space_5">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <Button
                    android:id="@+id/listitem_jl_lottery_btn_opretion"
                    android:layout_width="40dp"
                    android:layout_height="23dp"
                    android:background="@drawable/click_btn_round_orange_3"
                    android:paddingBottom="@dimen/space_3"
                    android:paddingLeft="@dimen/space_6"
                    android:paddingRight="@dimen/space_6"
                    android:paddingTop="@dimen/space_3"
                    android:text="@string/game_text_34"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/listitem_jl_lottery_img_8"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray" />
    </LinearLayout>

    <ImageView
        android:id="@+id/listitem_jl_lottery_img_9"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />
</LinearLayout>
