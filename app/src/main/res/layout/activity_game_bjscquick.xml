<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zp.xintianfei.ui.GameBJSCQuickActivity">

    <include
        android:id="@+id/act_game_bjscquick_lay_banner"
        layout="@layout/common_banner" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/act_game_bjscquick_lay_banner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ddd"
            android:orientation="horizontal"
            android:padding="@dimen/space_5">

            <ImageView
                android:layout_width="@dimen/game_head_size"
                android:layout_height="@dimen/game_head_size"
                android:src="@drawable/bg_3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/click_btn_game_skyblue"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/space_2"
                        android:paddingLeft="@dimen/space_4"
                        android:paddingRight="@dimen/space_4"
                        android:paddingTop="@dimen/space_2">

                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/bg_tag_main_white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/space_2"
                            android:text="@string/game_text_1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/space_12" />
                    </LinearLayout>

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_5"
                        android:background="@drawable/click_btn_game_skyblue"
                        android:padding="@dimen/space_2"
                        android:text="@string/game_text_2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/space_12" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_5"
                        android:background="@drawable/click_btn_game_skyblue"
                        android:padding="@dimen/space_2"
                        android:text="@string/game_text_3"
                        android:textColor="@color/white"
                        android:textSize="@dimen/space_12" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_5"
                        android:background="@drawable/click_btn_game_skyblue"
                        android:padding="@dimen/space_2"
                        android:text="@string/game_text_4"
                        android:textColor="@color/white"
                        android:textSize="@dimen/space_12" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_5"
                        android:background="@drawable/click_btn_game_skyblue"
                        android:padding="@dimen/space_2"
                        android:text="@string/game_text_5"
                        android:textColor="@color/white"
                        android:textSize="@dimen/space_12" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_5"
                        android:background="@drawable/click_btn_game_skyblue"
                        android:padding="@dimen/space_2"
                        android:text="@string/game_text_6"
                        android:textColor="@color/white"
                        android:textSize="@dimen/space_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/game_text_7"
                        android:textSize="@dimen/space_11" />

                    <TextView
                        android:id="@+id/act_game_bjsc_tv_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_default"
                        android:textSize="@dimen/space_11" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_15"
                        android:text="@string/fragment_main_text_1"
                        android:textSize="@dimen/space_11" />

                    <TextView
                        android:id="@+id/act_game_bjsc_tv_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_default"
                        android:textSize="@dimen/space_11" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_15"
                        android:text="@string/game_text_8"
                        android:textSize="@dimen/space_11" />

                    <TextView
                        android:id="@+id/act_game_bjsc_tv_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_default"
                        android:textSize="@dimen/space_11" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/space_15"
                        android:text="@string/game_text_9"
                        android:textSize="@dimen/space_11" />

                    <TextView
                        android:id="@+id/act_game_bjsc_tv_online"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_default"
                        android:textSize="@dimen/space_11" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_line_2"
        android:padding="@dimen/space_5">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/icon_bord" />
    </LinearLayout>
</RelativeLayout>
