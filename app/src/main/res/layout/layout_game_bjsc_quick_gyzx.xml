<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/act_game_bjsc_quick_tv_content_title"
    android:layout_margin="@dimen/space_5"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/layout_game_bjsc_quick_gyzx_lay_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_20"
                    android:layout_marginRight="@dimen/space_20"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_quick_black"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/space_7">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/keyboard_text_38"
                        android:textColor="@color/orange_2"
                        android:textSize="@dimen/game_content_number_text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/game_content_number_odds_margin_left"
                        android:text="@string/text_default"
                        android:textColor="@color/orange_2"
                        android:textSize="@dimen/game_content_number_text_size_odds" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_game_bjsc_quick_gyzx_lay_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_20"
                    android:layout_marginRight="@dimen/space_20"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_quick_black"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/space_7">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/keyboard_text_39"
                        android:textColor="@color/orange_2"
                        android:textSize="@dimen/game_content_number_text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/game_content_number_odds_margin_left"
                        android:text="@string/text_default"
                        android:textColor="@color/orange_2"
                        android:textSize="@dimen/game_content_number_text_size_odds" />
                </LinearLayout>
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:id="@+id/layout_game_bjsc_quick_gyzx_lay_3"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/space_3"
            android:background="@drawable/bg_btn_black_box"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/space_7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/keyboard_text_13"
                android:textColor="@color/orange_2"
                android:textSize="@dimen/game_content_number_text_size" />
        </LinearLayout>
    </LinearLayout>


</ScrollView>