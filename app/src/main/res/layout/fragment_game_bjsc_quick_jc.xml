<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/fg_bjsc_quick_jc_lay_quick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/space_5"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:orientation="horizontal"
                android:padding="@dimen/space_5">

                <Button
                    android:id="@+id/act_game_bjsc_quick_btn_chjc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_20"
                    android:layout_weight="1"
                    android:background="@drawable/click_btn_round_h_black_3"
                    android:padding="@dimen/space_5"
                    android:text="@string/game_bjsc_quick_text_1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/game_content_number_text_size" />

                <Button
                    android:id="@+id/act_game_bjsc_quick_btn_dxds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_weight="1"
                    android:background="@drawable/click_btn_round_h_black_3"
                    android:padding="@dimen/space_5"
                    android:text="@string/game_bjsc_quick_text_2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/game_content_number_text_size" />

                <Button
                    android:id="@+id/act_game_bjsc_quick_btn_tmjc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_weight="1"
                    android:background="@drawable/click_btn_round_h_black_3"
                    android:padding="@dimen/space_5"
                    android:text="@string/game_bjsc_quick_text_3"
                    android:textColor="@color/white"
                    android:textSize="@dimen/game_content_number_text_size" />

                <Button
                    android:id="@+id/act_game_bjsc_quick_btn_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_20"
                    android:layout_weight="1"
                    android:background="@drawable/click_btn_round_h_black_3"
                    android:drawableRight="@drawable/icon_more"
                    android:padding="@dimen/space_5"
                    android:text="@string/game_bjsc_quick_text_4"
                    android:textColor="@color/white"
                    android:textSize="@dimen/game_content_number_text_size" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/act_game_bjsc_quick_lay_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/act_game_bjsc_quick_tv_content_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/space_5"
                    android:text="@string/text_default"
                    android:textSize="@dimen/text_size_14" />

                <include
                    android:id="@+id/act_game_bjsc_quick_lay_content_number_chjc"
                    layout="@layout/layout_game_bjsc_quick_chjc"
                    android:visibility="visible" />

                <include
                    android:id="@+id/act_game_bjsc_quick_lay_content_number_dxds"
                    layout="@layout/layout_game_bjsc_quick_dxds"
                    android:visibility="gone" />

                <include
                    android:id="@+id/act_game_bjsc_quick_lay_content_number_tmjc"
                    layout="@layout/layout_game_bjsc_quick_tmjc"
                    android:visibility="gone" />

                <include
                    android:id="@+id/act_game_bjsc_quick_lay_content_number_gyzx"
                    layout="@layout/layout_game_bjsc_quick_gyzx"
                    android:visibility="gone" />

                <include
                    android:id="@+id/act_game_bjsc_quick_lay_content_number_lhjc"
                    layout="@layout/layout_game_bjsc_quick_lhjc"
                    android:visibility="gone" />

                <include
                    android:id="@+id/act_game_bjsc_quick_lay_content_number_gyhdxds"
                    layout="@layout/layout_game_bjsc_quick_gyhdxds"
                    android:visibility="gone" />

                <include
                    android:id="@+id/act_game_bjsc_quick_lay_content_number_zhdxds"
                    layout="@layout/layout_game_bjsc_quick_zhdxds"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/act_game_bjsc_quick_btn_content_close"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/space_4"
                    android:background="@drawable/close_black" />
            </RelativeLayout>
        </LinearLayout>


        <include layout="@layout/fragment_game_chat" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/act_game_bjsc_quick_lay_more_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/space_20"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4"
            android:background="@drawable/bg_more_dialog"
            android:orientation="vertical">

            <Button
                android:id="@+id/act_game_bjsc_quick_btn_gyzx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_5"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:paddingBottom="@dimen/space_4"
                android:paddingLeft="@dimen/space_20"
                android:paddingRight="@dimen/space_20"
                android:paddingTop="@dimen/space_4"
                android:text="@string/game_bjsc_quick_text_5"
                android:textColor="@drawable/click_text_color_white"
                android:textSize="@dimen/game_content_number_text_size" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray" />

            <Button
                android:id="@+id/act_game_bjsc_quick_btn_lhjc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:paddingBottom="@dimen/space_4"
                android:paddingLeft="@dimen/space_20"
                android:paddingRight="@dimen/space_20"
                android:paddingTop="@dimen/space_4"
                android:text="@string/game_bjsc_quick_text_6"
                android:textColor="@drawable/click_text_color_white"
                android:textSize="@dimen/game_content_number_text_size" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray" />

            <Button
                android:id="@+id/act_game_bjsc_quick_btn_gyhdxds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:paddingBottom="@dimen/space_4"
                android:paddingLeft="@dimen/space_20"
                android:paddingRight="@dimen/space_20"
                android:paddingTop="@dimen/space_4"
                android:text="@string/game_bjsc_quick_text_7"
                android:textColor="@drawable/click_text_color_white"
                android:textSize="@dimen/game_content_number_text_size" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray" />

            <Button
                android:id="@+id/act_game_bjsc_quick_btn_zhdxds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:paddingBottom="@dimen/space_4"
                android:paddingLeft="@dimen/space_20"
                android:paddingRight="@dimen/space_20"
                android:paddingTop="@dimen/space_4"
                android:text="@string/game_bjsc_quick_text_8"
                android:textColor="@drawable/click_text_color_white"
                android:textSize="@dimen/game_content_number_text_size" />

        </LinearLayout>

        <Button
            android:id="@+id/act_game_bjsc_quick_btn_more_close"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="@dimen/space_5"
            android:background="@drawable/close_black" />
    </LinearLayout>
</RelativeLayout>
